{
  "autoApprovedTools": [
    "WebSearch",
    "WebSearch(*)",
    "WebFetch",
    "WebFetch(*)",
    "Read",
    "Read(*)",
    "Write",
    "Write(*)",
    "Edit",
    "Edit(*)",
    "MultiEdit",
    "MultiEdit(*)",
    "Grep",
    "Grep(*)",
    "Glob",
    "Glob(*)",
    "LS",
    "LS(*)",
    "Bash(python *)",
    "Bash(python3 *)",
    "Bash(pip *)",
    "Bash(npm *)",
    "Bash(libreoffice *)",
    "Bash(ls *)",
    "Bash(cd *)",
    "Bash(pwd)",
    "Bash(mkdir *)",
    "Bash(cp presentations/*)",
    "Bash(mv presentations/*)",
    "Bash(rm presentations/*.pptx)",
    "Bash(rm presentations/*.pdf)",
    "Bash(rm presentations/*.png)",
    "TodoWrite",
    "TodoWrite(*)",
    "Task",
    "Task(*)",
    "NotebookEdit",
    "NotebookEdit(*)",
    "ExitPlanMode",
    "ExitPlanMode(*)",
    "BashOutput",
    "BashOutput(*)",
    "KillBash",
    "KillBash(*)",
    "mcp__pptx__*",
    "mcp__mermaid__*",
    "mcp__*"
  ],
  "permissions": {
    "allowedDirectories": [
      "${CLAUDE_PROJECT_DIR}",
      "${CLAUDE_PROJECT_DIR}/presentations",
      "${CLAUDE_PROJECT_DIR}/server",
      "${CLAUDE_PROJECT_DIR}/.claude"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__pptx__download_presentation",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PROJECT_DIR}/server/tools/slide_exporter.py ${PRESENTATION_PATH}",
            "description": "Export to markdown with PNG images"
          },
          {
            "type": "command",
            "command": "python ${CLAUDE_PROJECT_DIR}/server/tools/screenshot_extractor.py ${PRESENTATION_PATH}",
            "description": "Extract screenshots for review"
          },
          {
            "type": "command",
            "command": "python ${CLAUDE_PROJECT_DIR}/server/tools/quality_scorer.py ${PRESENTATION_PATH}",
            "description": "Generate quality report"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date)] User: $1\" >> ${CLAUDE_PROJECT_DIR}/presentations/.activity.log"
          }
        ]
      }
    ]
  },
  "env": {
    "PYTHONPATH": "${CLAUDE_PROJECT_DIR}/server:${PYTHONPATH}",
    "PRESENTATIONS_DIR": "${CLAUDE_PROJECT_DIR}/presentations",
    "TEMPLATES_DIR": "${CLAUDE_PROJECT_DIR}/presentations/templates",
    "EXPORTS_DIR": "${CLAUDE_PROJECT_DIR}/presentations/exports"
  },
  "features": {
    "extendedThinking": true,
    "imageSupport": true,
    "webAccess": true,
    "taskManagement": true,
    "mcpIntegration": true
  },
  "ui": {
    "showToolUse": true,
    "showThinking": false,
    "compactMode": false
  },
  "slideAgent": {
    "defaultTemplate": "professional",
    "autoSave": true,
    "autoSaveInterval": 300,
    "outputDirectory": "${CLAUDE_PROJECT_DIR}/presentations",
    "enableVersioning": true,
    "exportFormats": ["pptx", "pdf", "png", "markdown"],
    "workflow": {
      "phases": ["research", "outline", "layout", "design", "build", "review"],
      "parallelExecution": true,
      "autoOptimize": true,
      "targetQualityScore": 85,
      "maxIterations": 5
    },
    "contentRules": {
      "maxWordsPerSlide": 40,
      "minFontSize": 24,
      "requireVisualElement": true,
      "requireSpeakerNotes": true
    },
    "designSystem": {
      "colorSchemes": {
        "default": {
          "primary": "#2563EB",
          "accent": "#F59E0B",
          "text": "#1F2937",
          "background": "#FFFFFF"
        },
        "corporate": {
          "primary": "#1E40AF",
          "accent": "#059669",
          "text": "#1F2937",
          "background": "#FFFFFF"
        },
        "creative": {
          "primary": "#DC2626",
          "accent": "#7C3AED",
          "text": "#1F2937",
          "background": "#FFFFFF"
        }
      },
      "typography": {
        "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "scaleRatio": 1.333,
        "baseFontSize": 24
      }
    },
    "imageSettings": {
      "preferredSources": ["unsplash", "pexels", "pixabay"],
      "requireAttribution": false,
      "minResolution": [1920, 1080],
      "maxFileSizeKB": 500,
      "optimizeOnImport": true
    },
    "mermaidSettings": {
      "theme": "base",
      "applyDesignSystem": true,
      "maxComplexity": 9,
      "preferredTypes": ["flowchart", "mindmap", "sequence", "quadrant"]
    },
    "qualitySettings": {
      "thresholds": {
        "designConsistency": 85,
        "contentQuality": 85,
        "visualImpact": 80,
        "accessibility": 90,
        "technicalQuality": 85,
        "engagementPotential": 75
      },
      "autoReview": true,
      "iterativeImprovement": true
    }
  }
}