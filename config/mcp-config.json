{
  "mcpServers": {
    "powerpoint": {
      "command": "python",
      "args": ["-m", "mcp_powerpoint_server"],
      "env": {
        "PYTHONPATH": "${PROJECT_ROOT}/mcp-servers/powerpoint-mcp",
        "PPT_OUTPUT_DIR": "${PROJECT_ROOT}/presentations",
        "PPT_TEMPLATES_DIR": "${PROJECT_ROOT}/templates",
        "PPT_AUTO_SAVE": "true",
        "PPT_DEFAULT_THEME": "professional_blue"
      },
      "capabilities": {
        "tools": true,
        "resources": true
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "capabilities": {
        "tools": true
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${PROJECT_ROOT}"],
      "capabilities": {
        "tools": true,
        "resources": true
      }
    },
    "web-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-tavily"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      },
      "capabilities": {
        "tools": true
      }
    }
  },
  "defaults": {
    "autoConnect": ["powerpoint", "filesystem"],
    "timeout": 30000,
    "retryAttempts": 3
  }
}