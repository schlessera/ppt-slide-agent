# ============================================
# PPT Slide Agent Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ============================================
# API KEYS (Optional - for enhanced features)
# ============================================

# Claude API Key (if using Claude API directly)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API Key (for additional AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Tavily API Key (for web search capabilities)
# Get from: https://tavily.com/
TAVILY_API_KEY=

# GitHub Personal Access Token (for template repositories)
# Create at: https://github.com/settings/tokens
# Required scopes: repo (for private repos), public_repo (for public only)
GITHUB_TOKEN=

# ============================================
# POWERPOINT SETTINGS
# ============================================

# Output directory for presentations (relative or absolute path)
PPT_OUTPUT_DIR=./presentations

# Templates directory
PPT_TEMPLATES_DIR=./templates

# Default theme for new presentations
# Options: professional_blue, corporate_gray, elegant_green, warm_red
PPT_DEFAULT_THEME=professional_blue

# Auto-save presentations
PPT_AUTO_SAVE=true

# Create automatic backups
PPT_AUTO_BACKUP=true

# Backup directory
PPT_BACKUP_DIR=./presentations/backups

# ============================================
# MCP SERVER SETTINGS (pptx-mcp)
# ============================================

# PPTX MCP Server Host and Port
PPTX_HOST=127.0.0.1
PPTX_PORT=8000

# MCP server timeout in milliseconds
MCP_TIMEOUT=30000

# Number of retry attempts for MCP operations
MCP_RETRY_ATTEMPTS=3

# MCP server log level
# Options: debug, info, warning, error
MCP_LOG_LEVEL=info

# LibreOffice path (if not in system PATH)
# Required for slide image generation
# LIBREOFFICE_PATH=/usr/bin/libreoffice

# ============================================
# CLAUDE CODE SETTINGS
# ============================================

# Maximum tokens for Claude responses
CLAUDE_MAX_TOKENS=4096

# Temperature for Claude responses (0.0-1.0)
CLAUDE_TEMPERATURE=0.7

# Claude model to use
# Options: claude-3-opus-20240229, claude-3-sonnet-20240229
CLAUDE_MODEL=claude-3-opus-20240229

# ============================================
# SLIDE AGENT SETTINGS
# ============================================

# Agent operation mode
# Options: interactive, batch, automated
SLIDE_AGENT_MODE=interactive

# Automatically research topics before creating slides
SLIDE_AGENT_AUTO_RESEARCH=true

# Automatically optimize design after creating slides
SLIDE_AGENT_AUTO_DESIGN=true

# Enable image generation for slides
SLIDE_AGENT_IMAGE_GENERATION=false

# Maximum slides per presentation
SLIDE_AGENT_MAX_SLIDES=50

# Default presentation duration in minutes
SLIDE_AGENT_DEFAULT_DURATION=20

# Enable speaker notes generation
SLIDE_AGENT_SPEAKER_NOTES=true

# ============================================
# DOCKER SETTINGS (if using Docker)
# ============================================

# Docker compose project name
COMPOSE_PROJECT_NAME=ppt-slide-agent

# Host port for web UI
WEB_UI_PORT=8080

# Host port for MCP server
MCP_HOST_PORT=5000

# Redis cache settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# LOGGING AND MONITORING
# ============================================

# Log directory
LOG_DIR=./logs

# Log file rotation
# Options: daily, weekly, size:10M
LOG_ROTATION=daily

# Keep logs for N days
LOG_RETENTION_DAYS=30

# Enable performance monitoring
ENABLE_MONITORING=false

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable debug mode
DEBUG=false

# Development environment
# Options: development, staging, production
ENVIRONMENT=production

# Enable hot reload for templates
HOT_RELOAD=false

# ============================================
# PROJECT PATHS
# ============================================

# Project root directory (auto-detected, usually don't change)
PROJECT_ROOT=${PWD}

# Python virtual environment path
VENV_PATH=${PROJECT_ROOT}/venv

# Python path for MCP servers
PYTHONPATH=${PROJECT_ROOT}/mcp-servers/powerpoint-mcp:${PYTHONPATH}